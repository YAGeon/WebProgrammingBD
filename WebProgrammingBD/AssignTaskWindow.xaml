<Window x:Class="WebProgrammingBD.AssignTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebProgrammingBD"
        mc:Ignorable="d"
        Title="Assign Task" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Select Student" />
            <ComboBox x:Name="StudentComboBox" />

            <TextBlock Text="Select Assignment" />
            <ComboBox x:Name="AssignmentComboBox" />

            <Button Content="Assign" Click="Assign_Click" />
        </StackPanel>
    </Grid>
</Window>
