<Window x:Class="WebProgrammingBD.AddSectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebProgrammingBD"
        mc:Ignorable="d"
        Title="Add Section" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Enter section name:"/>
            <TextBox x:Name="NameSection" Width="390" HorizontalAlignment="Left" Margin="5"/>
            <Button Content="Add" Margin="5" Click="AddSectionInBD_Click"/>
        </StackPanel>
    </Grid>
</Window>
